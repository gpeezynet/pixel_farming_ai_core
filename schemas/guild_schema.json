{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Guild Schema",
    "description": "Defines the structure of a companion planting guild used in FJRC Pixel Farming.",
    "type": "object",
    "required": ["guild_code", "name", "plants", "environment", "soil_depth", "function"],
    "properties": {
      "guild_code": {
        "type": "string",
        "description": "Unique code for the guild (e.g., A1, B2)"
      },
      "name": {
        "type": "string",
        "description": "Descriptive name of the guild"
      },
      "plants": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["name", "type", "position", "height"],
          "properties": {
            "name": { "type": "string" },
            "type": {
              "type": "string",
              "enum": ["fruit", "vegetable", "herb", "flower", "root", "medicinal", "cover crop"]
            },
            "position": {
              "type": "string",
              "enum": ["center", "corner_1", "corner_2", "corner_3", "corner_4"]
            },
            "height": {
              "type": "string",
              "enum": ["low", "mid", "tall"]
            }
          }
        }
      },
      "environment": {
        "type": "string",
        "description": "General environmental conditions (e.g., Full Sun, Loamy Soil, Partial Shade)"
      },
      "soil_depth": {
        "type": "string",
        "description": "Recommended minimum soil depth for this guild (e.g., 6in, 10in)"
      },
      "bloom_window": {
        "type": "array",
        "items": { "type": "string" },
        "description": "Months when the guild is expected to flower"
      },
      "harvest": {
        "type": "array",
        "items": { "type": "string" },
        "description": "List of harvestable crops in the guild"
      },
      "function": {
        "type": "array",
        "items": {
          "type": "string",
          "enum": [
            "culinary", "pollinator", "pest deterrent", "visual", "soil builder",
            "trap crop", "flavor booster", "ground cover", "medicinal", "heat tolerant"
          ]
        }
      }
    }
  }
  